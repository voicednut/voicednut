# Call provider (twilio or aws)
CALL_PROVIDER=twilio
CORS_ORIGINS=https://app.example.com,https://dashboard.example.com
ADMIN_API_TOKEN=super-secure-admin-token

# Compliance & keypad capture
CONFIG_COMPLIANCE_MODE=safe            # safe | dev_insecure
# 32-byte key in hex or base64 for AES-256-GCM (leave blank to disable encryption in dev)
DTMF_ENCRYPTION_KEY=

# Twilio credentials for test calls (required when CALL_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
FROM_NUMBER=+1XXXXXXXXXX       # Twilio phone number
APP_NUMBER=+1XXXXXXXXXX        # App number
YOUR_NUMBER=+1XXXXXXXXXX       # Your personal/test number

# AWS connectivity (required when CALL_PROVIDER=aws)
AWS_REGION=us-east-1
AWS_CONNECT_INSTANCE_ID=your_connect_instance_id
AWS_CONNECT_CONTACT_FLOW_ID=your_contact_flow_id
AWS_CONNECT_QUEUE_ID=optional_queue_id
AWS_CONNECT_SOURCE_PHONE_NUMBER=+1XXXXXXXXXX
AWS_TRANSCRIPTS_QUEUE_URL=https://sqs.your-region.amazonaws.com/123456789012/transcript-queue
AWS_EVENT_BUS_NAME=voice-platform-events

# AWS Polly + media storage
AWS_POLLY_VOICE_ID=Joanna
AWS_POLLY_OUTPUT_BUCKET=your-polly-audio-bucket
AWS_POLLY_OUTPUT_PREFIX=tts/
AWS_MEDIA_BUCKET=your-media-bucket

# AWS Pinpoint SMS
AWS_PINPOINT_APPLICATION_ID=your_pinpoint_project_id
AWS_PINPOINT_ORIGINATION_NUMBER=+1XXXXXXXXXX
AWS_PINPOINT_REGION=us-east-1

# Amazon Transcribe
AWS_TRANSCRIBE_LANGUAGE_CODE=en-US
AWS_TRANSCRIBE_VOCABULARY_FILTER_NAME=optional-filter

# Vonage Voice & SMS (required when CALL_PROVIDER=vonage)
VONAGE_API_KEY=your_vonage_api_key
VONAGE_API_SECRET=your_vonage_api_secret
VONAGE_APPLICATION_ID=your_vonage_application_id
# Provide either the PEM contents (use \n for new lines) or a file path to the private key
VONAGE_PRIVATE_KEY=/path/to/vonage.private.key
VONAGE_VOICE_FROM_NUMBER=+1XXXXXXXXXX
VONAGE_SMS_FROM_NUMBER=+1XXXXXXXXXX
# Optional overrides if you need to point Vonage webhooks somewhere else
# VONAGE_ANSWER_URL=https://your-server.example.com/vonage/answer
# VONAGE_EVENT_URL=https://your-server.example.com/vonage/event

# Your ngrok or server URL
SERVER=your_server_url_here    # e.g., 123.ngrok.io or myserver.fly.dev
RATE_LIMIT_WINDOW_MS=60000     # Optional: request window (ms)
RATE_LIMIT_MAX=300             # Optional: requests per window

# OpenRouter Configuration (replaces OpenAI)
PORT=1337
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Optional: Choose your model (defaults to free Llama 3.1 8B)
# Example free models:
# - meta-llama/llama-3.1-8b-instruct:free
# - microsoft/wizardlm-2-8x22b:free
# - google/gemma-2-9b-it:free
# - qwen/qwen-2-7b-instruct:free
# - mistralai/mistral-7b-instruct:free
OPENROUTER_MODEL=your_openrouter_model_here

# Optional: Site info for OpenRouter (helps with rate limits)
YOUR_SITE_URL=https://your_site_url_here
YOUR_SITE_NAME=Your App Name

# Legacy OpenAI (remove if using OpenRouter)
# OPENAI_API_KEY=your_openai_api_key_here

# Deepgram for speech services
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Deepgram voice model
VOICE_MODEL=your_voice_model_here

# Telegram bot integration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Call Recording
# Set to true if you want to record calls (make sure you comply with laws)
RECORDING_ENABLED=false
